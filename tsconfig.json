{
	"compilerOptions": {
		"jsx": "react-jsx",
		"target": "esnext",
		"module": "esnext",
		"moduleResolution": "node",

		"allowJs": false,
		"declaration": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"isolatedModules": true,
		"noEmit": true,
		"sourceMap": true,
		"strict": true,
		"skipLibCheck": true,

		"outDir": "./dist",
		"rootDir": "./src"
	},
	"include": ["src/**/*"],
	"exclude": ["**/node_modules", "**/dist", "**/*.md"]
}
